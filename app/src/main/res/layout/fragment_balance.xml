<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="refreshing"
            type="boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorBaseBackground"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/ic_my_account_add_cash" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_money"
                            android:layout_marginStart="16dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/unutilizedTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/_0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/textColorGray"
                                android:letterSpacing="0.01"
                                android:lineSpacingExtra="7sp"
                                android:text="@string/unUtilized_balance"
                                tools:text="@string/unUtilized_balance"
                                tools:ignore="SmallSp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/addCashBtn"
                            android:layout_width="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:background="@drawable/add_cash_button">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#28006f"
                                android:lineSpacingExtra="5sp"
                                android:gravity="center_horizontal"
                                android:text="@string/add_cash"
                                tools:text="@string/add_cash"/>
                        </LinearLayout>

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_trophy"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/ic_my_account_withdrawal"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_trophy"
                            android:layout_marginStart="16dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/winningsTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/colorBlack"
                                android:lineSpacingExtra="6sp"
                                android:text="@string/_0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/textColorGray"
                                android:letterSpacing="0.01"
                                android:lineSpacingExtra="7sp"
                                android:text="@string/you_winnings"
                                tools:text="You Winnings"
                                tools:ignore="SmallSp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/withdrawBtn"
                            android:layout_width="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:background="@drawable/add_cash_button">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#28006f"
                                android:lineSpacingExtra="5sp"
                                android:gravity="center_horizontal"
                                android:text="@string/withdraw"
                                tools:text="Withdraw"/>
                        </LinearLayout>

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="16dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cash_bonous"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:contentDescription="@string/image_description"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_my_account_cash_bonous"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/cash_bonous"
                                android:layout_marginStart="16dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/cashBonusTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack"
                                    android:lineSpacingExtra="6sp"
                                    android:text="@string/_0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:textColor="@color/textColorGray"
                                    android:letterSpacing="0.01"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/cash_bonus"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>


                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginStart="20dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="16dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/total_balance"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_my_account_wallet"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/total_balance"
                                android:layout_marginStart="16dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/totalBalance_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorBlack"
                                    android:lineSpacingExtra="6sp"
                                    android:text="@string/_0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11sp"
                                    android:textColor="@color/textColorGray"
                                    android:letterSpacing="0.01"
                                    android:lineSpacingExtra="7sp"
                                    android:text="@string/total_balance"
                                    tools:text="Total Balance"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>


                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_banner"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </LinearLayout>
        </ScrollView>
       <!-- <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorAccent"
            android:indeterminateTintMode="src_atop"
            app:visibleGone="@{refreshing}"/>-->
    </RelativeLayout>


</layout>