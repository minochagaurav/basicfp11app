<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="refreshing"
            type="boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="15dp"
            android:theme="@style/ToolbarTheme"
            app:titleTextAppearance="@style/AppTheme.Toolbar.Title"
            app:contentInsetStart="15dp"/>



        <LinearLayout
            android:layout_below="@+id/myToolbar"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight=".5"
                android:padding="@dimen/_15sdp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/contact_us" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorBlack"
                    android:lineSpacingExtra="4sp"
                    android:layout_gravity="center"
                    android:text="@string/feel_free_to_contact_us_at"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#828282"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="@string/email_us" />

                <TextView
                    android:id="@+id/emailBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/baseColor"
                    android:lineSpacingExtra="2.8sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:text="@string/helpdesk_fantasypower11_com"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:textColor="#828282"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="@string/call_us" />


                <TextView
                    android:id="@+id/callBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/baseColor"
                    android:lineSpacingExtra="2.8sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:text="@string/_91_1204155116"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/facebook"/>
                    <ImageView
                        android:id="@+id/iv_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/twitter"/>

                    <ImageView
                        android:id="@+id/iv_insta"
                        android:layout_marginEnd="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/instagram"/>
                    <ImageView
                        android:id="@+id/iv_tellegram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/telegram"/>

